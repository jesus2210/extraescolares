<?xml version="1.0" encoding="UTF-8"?>
      <openerp>
            <data>
                  <!-- declaracion de la vista formulario -->
            <record model="ir.ui.view" id="register_form_view">
                  <field name="name">register.form</field>
                  <field name="model">extraescolares.register</field>
                  <field name="arch" type="xml">
                        <form string="register Form" version="7.0">
                              <sheet>
                                    <group col="5" colspan="2">
                                          <label for="names"/>
                                          <h3><field name="names"/></h3>
                                          <label for="surname"/>  
                                          <h3><field name="surname"/></h3>
                                    </group>      
                                    <group col="5" colspan="3">      
                                          <label for="sexo"/>  
                                          <h3><field name="sexo"/></h3>
                                          <label for="carrera"/>
                                          <h3><field name="carrera"/></h3>
                                    </group>
                                    <group col="5" colspan="3">      
                                          <label for="num_control"/>
                                          <h3><field name="num_control"/></h3>
                                          <label for="semester"/>
                                          <h3><field name="semester"/></h3>
                                    </group>
                                    <group col="5" colspan="3">
                                          <label for="num_telefono"/>
                                          <h3><field name="num_telefono"/></h3>
                                          <label for="email"/>
                                          <h3><field name="email"/></h3>
                                    </group>
                             </sheet>
                        </form>
                  </field>
            </record>
            <!-- creamos la vista lista -->
            <record model="ir.ui.view" id="register_tree_view">
                  <field name="name">register.tree</field>
                  <field name="model">extraescolares.register</field>
                  <field name="arch" type="xml">
                        <tree string="Register Form">
                              <field name="names"/>
                              <field name="surname"/>
                              <field name="sexo"/>
                              <field name="carrera"/>
                              <field name="num_control"/>
                              <field name="semester"/>
                              <field name="num_telefono"/>
                              <field name="email"/>
                        </tree>
                  </field>
            </record>

            <!--elementos del menu-->
            <!-- un primer nivel en el menu del lado izquierdo se necesita antes de usar
                   la action=attribute-->
            <menuitem id="main_register_menu" name="Extra Escolares"/>
            <menuitem id="register_menu_alumnos" name="Alumnos" parent="main_register_menu" sequence="1"/>
            <!-- ventanas de accion -->
                  <!-- La siguiente etiqueta es una definicion de la accion.
                   Basicamente, creamos un registro en el modelo ir.actions.act_windows
                   OpenERP hara el resto -->
                   <record model="ir.actions.act_window" id="register_list_action">
                        <field name="name">Registros Alumnos</field>
                        <field name="res_model">extraescolares.register</field>
                        <field name="view_type">form</field>
                        <field name="view_mode">tree,form</field>
                        <field name="help" type="html">
                              <p class="oe_view_nocontent_create">Registar el primer Alumno</p>
                        </field>
                   </record>

                  <!--el siguiente elemento del menu deberia aparecer *despues* su register_menu padre y *despues* su accion course_list_action -->
                  <menuitem id="register_alumno" name="Registrar Alumnos" parent="register_menu_alumnos" action="register_list_action" />
                  <!-- ubicacion completa del id: action="extraescolares.register_list_action"
                         no se requiere cuando es el mismo modulo -->
            </data>
      </openerp>
